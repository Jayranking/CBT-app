
<!DOCTYPE html>
<html lang="en">
<head>

    <title>View admin</title>
    <%- include('../snippets/headers.ejs') %>
    
</head>
<body>
    <div class="container-fluid position-relative bg-white d-flex p-0">
        <!-- Sidebar Start -->
        <%- include('../snippets/adminSidebar.ejs') %> 
        <!-- Sidebar End -->


        <!-- Content Start -->
        <div class="content">
            <!-- Navbar Start -->
            <%- include('../snippets/adminNav.ejs') %>
            <!-- Navbar End -->


            <!-- Content Start -->
            <div class="container-fluid">
                <div class="card col-md-8 mx-auto shadow mt-5">
                    <div class="card-body">
                        <h3 class="text-center text-primary">Edit Admin</h3>
                        <% var ejs %>
                        <% if (context.admin) { %>
                        <form id="adminRegForm">
                            <div class="row mb-4">
                                <div class="col-sm-12 col-xl-6 mt-3">
                                    <input type="text" name="fullname" class="form-control" value="<%= context.admin.fullname %>">
                                    <div class="fullnameErr text-danger"></div>
                                </div>

                                <div class="col-sm-12 col-xl-6 mt-3">
                                    <input type="email" name="email" class="form-control" value="<%= context.admin.email %>">
                                    <div class="emailErr text-danger"></div>
                                </div>
                            </div>

                            <div class="row mb-4">
                                <div class="col-sm-12 col-xl-6 mb-3">
                                    <input type="text" name="phone_no"  class="form-control" value="<%= context.admin.phone_no %>">
                                    <div class="phone_noErr text-danger"></div>
                                </div>

                                <div class="col-sm-12 col-xl-6 mb-3">
                                    <select name="gender" class="form-select">
                                        <option value="<%= context.admin.gender %>" selected><%= context.admin.gender %></option>
                                        <option value="male">Male</option>
                                        <option value="female">Female</option>
                                    </select>    
                                    <div class="genderErr text-danger"></div>                               
                                </div>
                            </div>
                            <input type="hidden" name="adminId" value="<%= context.admin._id %>">


                            <div class="mt-3">
                                <button type="submit" class="btn btn-primary w-100">Submit</button>
                            </div>
                        </form>
                        <% } %>
                    </div>
                </div>
            </div>
        <!-- Content End -->
        </div>
    </div>

    <!-- Footer Start -->
    <%- include('../snippets/footer.ejs') %>
    <!-- Footer End -->

    <script src="/js/editAdmin.js"></script>
    <!-- JavaScript -->
    <%- include('../snippets/scripts.ejs') %>
     
</body>
</html>