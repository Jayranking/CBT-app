
<!DOCTYPE html>
<html lang="en">
<head>

    <title>Duration</title>
    <%- include('../snippets/headers.ejs') %>

</head>
<body>
    <div class="container-fluid position-relative bg-white d-flex p-0">
        <!-- Sidebar Start -->
        <%- include('../snippets/sidebar.ejs') %>
        <!-- Sidebar End -->


        <!-- Content Start -->
        <div class="content">
            <!-- Navbar Start -->
            <%- include('../snippets/navbar.ejs') %>
            <!-- Navbar End -->

            <div class="container-fluid">
                <div class="container mt-5">
                    <div class="col-md-6 mx-auto">
                        <div class="card shadow">
                            <div class="card-body text-center">
                                <h4 class="text-success">Set Exam Duration</h4>
                                <form action="" id="timeForm">
                                    <div class="form-group mb-3">
                                        <label for="hours">Hours</label>
                                        <input type="text" class="form-control" id="hours" name="hours" value="<%= time.hours %>">
                                        <div class="hourErr text-danger"></div>
                                    </div>
            
                                    <div class="form-group  mb-3">
                                        <label for="minutes">Minutes</label>
                                        <input type="text" class="form-control" id="minutes" name="minutes"  value="<%= time.minutes %>">
                                        <div class="minErr text-danger"></div>
                                    </div>
            
                                    <div class="form-group mb-3">
                                        <label for="seconds">Seconds</label>
                                        <input type="text" class="form-control" id="seconds" name="seconds" value="<%= time.seconds %>">
                                        <div class="secsErr text-danger"></div>
                                    </div>
            
                                    <button type="submit" class="btn btn-sm btn-primary">Save Duration</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
        <!-- Content End -->
    </div>

    <!-- Footer Start -->
    <%- include('../snippets/footer.ejs') %>
    <!-- Footer End -->

    <!-- JavaScript -->
    <%- include('../snippets/scripts.ejs') %>
    <script src="/js/time.js"></script>

   
    
</body>
</html>