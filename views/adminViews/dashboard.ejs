
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Dashboard</title>
    <%- include('../snippets/headers.ejs') %>

</head>
<body>
    <div class="container-fluid position-relative bg-white d-flex p-0">
        <% var context %>
        <!-- Sidebar Start -->
        <%- include('../snippets/adminSidebar.ejs') %> 
        <!-- Sidebar End -->

        <!-- Content Start -->
        <div class="content">
            <!-- Navbar Start -->
            <%- include('../snippets/adminNav.ejs') %>
            <!-- Navbar End -->


            <!-- Content Start -->
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-3 col-md-6 col-sm-12 mt-4">
                        <div class="card shadow bg-success text-white">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-lg-6 col-md-6 col-sm-12 text-start">
                                        <p><i class="uil uil-user-plus fs-1"></i> <br> Lecturers</p>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-12 text-end">
                                        <% if (context.lecturersCount) { %>
                                            <h1><%= context.lecturersCount %></h1>
                                        <% } else { %>
                                            <h1>0</h1> <!-- Default value if count is not available -->
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-3 col-md-6 col-sm-12 mt-4">
                        <div class="card shadow bg-success text-white">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-lg-6 col-md-6 col-sm-12 text-start">
                                        <p><i class="uil uil-user-check fs-1"></i> <br> Students</p>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-12 text-end">
                                        <% if (context.studentsCount) { %>
                                            <h1><%= context.studentsCount %></h1>
                                        <% } else { %>
                                            <h1>0</h1> <!-- Default value if count is not available -->
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-3 col-md-6 col-sm-12 mt-4">
                        <div class="card shadow bg-success text-white">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-lg-6 col-md-6 col-sm-12 text-start">
                                        <p><i class="uil uil-home fs-1"></i> <br> Faculty</p>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-12 text-end">
                                        <% if (context.facultiesCount) { %>
                                            <h1><%= context.facultiesCount %></h1>
                                        <% } else { %>
                                            <h1>0</h1> <!-- Default value if count is not available -->
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-3 col-md-6 col-sm-12 mt-4">
                        <div class="card shadow bg-success text-white">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-lg-6 col-md-6 col-sm-12 text-start">
                                        <p><i class="uil uil-bell-school fs-1"></i> <br> Department</p>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-sm-12 text-end">
                                        <% if (context.deptsCount) { %>
                                            <h1><%= context.deptsCount %></h1>
                                        <% } else { %>
                                            <h1>0</h1> <!-- Default value if count is not available -->
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>  

                
                </div>
            </div>
        <!-- Content End -->
        </div>
    </div>

    <!-- Footer -->
    <%- include('../snippets/footer.ejs') %>

    <!-- JavaScript -->
    <%- include('../snippets/scripts.ejs') %>
     
</body>
</html>